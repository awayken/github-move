html {
    background: #d4fc79;
}

body {
    background-image: linear-gradient(to top, #d4fc79 0%, #96e6a1 100%);
    font-family: 'Comfortaa', cursive;
    line-height: 1.3;
    padding: 1em;
}

a {
    color: currentColor;
}

main {
    margin: 0 auto;
    max-width: 50em;
}

h1 {
    font-family: 'Poiret One', cursive;
}

.sronly {
    position:absolute;
    left:-10000px;
    top:auto;
    width:1px;
    height:1px;
    overflow:hidden;
}

.villanelle {
    line-height: 2;
    margin: 1em auto;
    max-width: 40em;
}

.villanelle--input,
.villanelle--line {
    display: flex;
    justify-content: space-between;
}

.villanelle--input:nth-child(3n+1),
.villanelle--line:nth-child(3n+1) {
    margin-top: 1em;
}

.villanelle--input:nth-child(19n),
.villanelle--line:nth-child(19n) {
    margin-top: 0;
}

.villanelle--rhyme {
    color: #c9c9c9;
    display: inline-block;
    flex: none;
    margin-right: .5em;
    text-align: center;
    width: 2em;
}

.villanelle-textbox {
    background: rgba(255, 255, 255, .45);
    border: 1px solid #c9c9c9;
    flex-grow: 1;
    font-family: 'Comfortaa', cursive;
    margin-right: .5em;
    padding: .25em;
}

.villanelle--text {
    flex-grow: 1;
}
